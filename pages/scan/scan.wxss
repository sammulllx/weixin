.meta {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 1000rpx;
  padding: 50rpx 40rpx;
}

.poster {
  width: 80%;
  height: 80%;
  margin: 20rpx;
  box-shadow: 10px 10px 15px grey;

}

.title {
  font-style: 42rpx;
  color: #444;
}

.info {
  font-size: 18rpx;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}

.summary {
  width: 80%;
  margin: 30rpx auto;
}

.label {
  display: block;
}

.content {
  color: #666;
  font-size: 20rpx;
  padding: 10rpx
}
.userinfo{
  width:100%;
  background: rgb(238, 245, 229);
  background-size: cover;
  /*层叠布局*/
  z-index: 0;
  
  
  display: flex;
  flex-direction: column;
  
  height: 100%;
  
}

.pieCanvas {
    align-items: center;
    height: 400px;
    transform: scale(1.2);
  
    margin: 0 auto;
}
.home-swiper {
  width: 100%;
  height: 324rpx;
}
.slide-image {
  width: 100%;
  height: 324rpx;
}
.greenbar {
  height: 80rpx;
  line-height: 80rpx;
  /* background: linear-gradient(#336405, rgb(15, 170, 111)); */
  background: #8BC34A;
  color: #fff;
  padding-left: 16rpx;
  border-radius: 30rpx;
}
.greenbar .title {
  display: block;
  color: #fff;
  font-weight: 700;
  font-size: 30rpx;
}
.box {
	width:100%;
	height:100%;
	position: relative;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
  z-index:99;
} 
page{
  height: 100%;
  width: 100%;
