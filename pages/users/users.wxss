.dataBarItem {
  display: flex;
  flex-direction: row wrap;
  align-items:center;
  height: 40px;
  margin-top: 7px;
}
.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.dataBaritemImage {
  height: 24px;
  width: 24px;
  margin-right: 4%;
  margin-left: 3%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

view.dataBaritemImage image{
  height: 80%;
  width: 80%;
}

.dataBaritemText {
  font-size: 18px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userInfo {
 
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:0 auto;
}
.userBox {
  height: 480rpx;
  display: flex;
  align-items: center;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
  background: rgb(238, 245, 229);
  width: 80%;
  border-radius: 20rpx;
  margin: 0 auto;
 
 
  /*相对位置，这样其他view就能用绝对位置覆盖上去*/
 
}
.Info-head {
  overflow: hidden;  
    display: block;
  height: 180rpx;
  width: 180rpx;
  margin: 10px;

  border-radius: 50%; 
  box-shadow: 9px 9px 10px rgb(146, 140, 140); 
 
  
  margin-left: 6px;
  margin-right: 15px;
}
.Info-detail {
  color: black;
  font-size: 60rpx;
}
